{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" href="/css/admin.css">
{% endblock %}

{% block headjs %}{% endblock %}


{% block mainid %}admin-content{% endblock %}
{% block main %}

    {% block header %}
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Les petits restos de Pierrot</a>
            </div>
            <div class="collapse navbar-collapse">
                <a class="btn btn-default navbar-btn navbar-right" href="{{ path('admin_logout') }}"><span class="glyphicon glyphicon-log-out"></span>  Logout</a>
            </div>

        </nav>
    {% endblock %}

    <div class="row">
        <div class="col-md-3">
            {% set current_menu = 'home' %}
            {% block menu %}
            <ul class="nav nav-pills nav-stacked">
                <li class="{% if current_menu == 'home' %}active{% endif %}" ><a href="{{ path('admin') }}" ><span class="glyphicon glyphicon-home"> Accueil</a></li>
            </ul>
            <p>Restaurant</p>
            <ul class="nav nav-pills nav-stacked">
                <li class="{% if current_menu == 'restaurants_list' %}active{% endif %}"><a href="{{ path('admin_restaurant_list') }}" >Liste</a></li>
                <li class="{% if current_menu == 'restaurants_create' %}active{% endif %}" ><a href="{{ path('admin_restaurant_create') }}" >Cr√©er</a></li>
            </ul>
            {% endblock %}
        </div>
        <div class="col-md-9">
             {% block content %}{% endblock %}
        </div>

    </div>



    {% block footer %}

    {% endblock %}

{% endblock %}

{% block popups %}
{% endblock %}

{% block js %}
	{{ parent() }}


{% endblock %}
